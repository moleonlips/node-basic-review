<!DOCTYPE html>
<html lang="en">

<head> <%- include('../partials/head.ejs') %> </head>

<body>

  <%- include('../partials/navbar.ejs'); %>

    <div class="container">
      <table>
        <thead>
          <tr>
            <th>No.</th>
            <th>Room name</th>
            <th>Length</th>
            <th>Height</th>
            <th>Width</th>
            <th>Area</th>
            <th>Max capacity</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((room, step)=> { %>
            <tr>
              <td>
                <%= step+1 %>
              </td>
              <td>
                <%= room.room_name %>
              </td>
              <td>
                <%= room.room_length %>
              </td>
              <td>
                <%= room.room_width %>
              </td>
              <td>
                <%= room.room_height %>
              </td>
              <td>
                <%= room.room_area %>
              </td>
              <td>
                <%= room.max_capacity %>
              </td>
              <td>
                <a href="room/updateForm/<%=room.id%>">Edit</a>
                <a href="room/delete-confirm/<%=room.id%>">Del</a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>

    <br><br><br>

    <div class="container">
      <form action="/stats" enctype="multipart/form-data" method="post">
        <div class="form-group">
          <input type="file" class="form-control-file" name="uploaded_file" multiple>
          <input type="text" class="form-control" placeholder="Number of speakers" name="nspeakers">
          <input type="submit" value="Get me the stats!" class="btn btn-default">
        </div>
      </form>

    </div>

    <!-- <%- include('../partials/right-window.ejs') %> -->
</body>

</html>