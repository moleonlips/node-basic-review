<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs') %>
</head>

<body>

  <%- include('../partials/navbar.ejs'); %>

    <div class="form">
      <form action="/room/create" method="post">
        <fieldset>
          <legend>
            <h2>Add a new room:</h2>
          </legend>
          <label for="room">Room name:</label>
          <input type="text" id="room" name="room"><br><br>
          <label for="length">Length:</label>
          <input type="number" id="length" name="length"><br><br>
          <label for="width">Width:</label>
          <input type="number" id="width" name="width"><br><br>
          <label for="height">Height:</label>
          <input type="number" id="height" name="height"><br><br>
          <label for="capacity">Max capacity:</label>
          <input type="number" id="capacity" name="capacity"><br><br>
          <input type="submit" value="Submit">
        </fieldset>
      </form>
    </div>
</body>

</html>