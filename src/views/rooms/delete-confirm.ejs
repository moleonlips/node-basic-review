<!DOCTYPE html>
<html lang="en">

<head> <%- include('../partials/head.ejs') %> </head>

<body>

  <%- include('../partials/navbar.ejs'); %>

    <div class="form">
      <form action="/room/delete/<%=myRoom.id%>" method="get">
        <fieldset>
          <legend>
            <h2>
              <%=message%>
            </h2>
          </legend>
          <label for="room">Room name:</label>
          <input disabled value="<%=myRoom.room_name%>" type="text" id="room" name="room"><br><br>
          <label for="length">Length:</label>
          <input disabled value="<%=Number(myRoom.room_length)%>" type="number" id="length" name="length"><br><br>
          <label for="width">Width:</label>
          <input disabled value="<%=Number(myRoom.room_width)%>" type="number" id="width" name="width"><br><br>
          <label for="height">Height:</label>
          <input disabled value="<%=Number(myRoom.room_height)%>" type="number" id="height" name="height"><br><br>
          <label for="capacity">Max capacity:</label>
          <input disabled value="<%=Number(myRoom.max_capacity)%>" type="number" id="capacity" name="capacity"><br><br>
          <input type="submit" value="Submit">
        </fieldset>
      </form>
    </div>
</body>

</html>